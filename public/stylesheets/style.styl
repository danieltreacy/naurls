body
  margin: 0 auto
  width: 900px
  background-color: #5b5b5b
  color: white
  text-align: center
  -webkit-font-smoothing: antialiased

body, span, input, a
  font-family: Helvetica, Arial, sans-serif
  text-transform: lowercase

h1
  font-size: 70px
  font-family: ff-cocon-web-pro, sans-serif
  font-weight: 400
  text-transform: lowercase
  
h2
  margin-bottom: 50px

#url
  text-align: center
  
  input
    background-color: #fff
    color: black
    outline: none
    width: 600px
    font-size: 36px
    padding: 10px
    border-radius: 5px
    -webkit-border-radius: 10px
    margin-bottom: 40px

input:focus
  outline: none
  border: 4px solid #00B7FF  

a
  color: #00B7FF
  text-decoration: none
    
#short
  width: 900px
  display: block
  clear: both
  display: none
  font-size: 36px
  
  .unique
    font-weight: 300
    
#preloader
  width: 900px
  margin-top: 50px
  text-align: center
  display: none
  
p.colophon
